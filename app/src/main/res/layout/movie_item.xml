<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_marginRight="@dimen/full_padding"    android:layout_marginLeft="@dimen/full_padding"    android:layout_marginTop="@dimen/half_padding"    android:layout_marginBottom="@dimen/half_padding"    android:padding="@dimen/min_padding"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="146dp">        <ImageView            android:id="@+id/poster"            android:padding="@dimen/min_padding"            android:src="@mipmap/ic_launcher"            android:contentDescription="@string/poster"            android:layout_weight="0.4"            android:layout_width="0dp"            android:scaleType="fitXY"            android:layout_height="match_parent" />        <LinearLayout            android:layout_weight="0.6"            android:layout_width="0dp"            android:orientation="vertical"            android:padding="@dimen/min_padding"            android:layout_height="match_parent">            <TextView                android:id="@+id/title"                android:text="@string/movie_title"                android:textStyle="bold"                android:textSize="24sp"                android:maxLines="1"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/release"                android:text="@string/release_of_date"                android:paddingTop="@dimen/min_padding"                android:paddingBottom="@dimen/min_padding"                android:maxLines="1"                android:layout_width="match_parent"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/overview"                android:text="@string/overview"                android:paddingTop="@dimen/min_padding"                android:paddingBottom="@dimen/min_padding"                android:maxLines="3"                android:layout_width="match_parent"                android:layout_height="wrap_content" />        </LinearLayout>    </LinearLayout></android.support.v7.widget.CardView>